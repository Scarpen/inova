<div class="page-header">
	<h1><%= t '.show' %> <%= t '.project' %></h1>
</div>

<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title"><%= t '.project' %></h3>
  </div>
  <div class="panel-body">
	<p>
	  <strong><%= t '.title' %>:</strong>
	  <%= @project.title %>
	</p>

	<p>
	  <strong><%= t '.description' %>:</strong>
	  <%= @project.description %>
	</p>    

	<p>
	  <strong><%= t '.stage' %>:</strong>
	  <%= @project.stage.description %>
	</p>

	<p>
	  <strong><%= t '.protection' %>:</strong>
	  <%= @project.protection.description %>
	</p>    
  </div>
</div>

<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title"><%= t '.event' %></h3>
  </div>
  <div class="panel-body">
    <table class="table table-hover table-condensed table-responsive">
      <thead>
        <tr>
          <th><%= t '.description' %></td>
          <th><%= t '.data' %></td>
        </tr>
      </thead>
      <tbody>
        <% @project.events.by_date.each do |event| %>
        <tr>
          <td><%= event.description %></td>
          <td><%= event.date %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<%= link_to t('links.edit'), edit_project_path(@project), class: "btn btn-primary" %>
<%= link_to t('links.back'), projects_path, class: "btn btn-default" %>
