<div class="nested-fields">
	<div class="col-md-6">
		<div class="panel panel-primary">
		  
		  <div class="panel-heading">
		    <h3 class="panel-title"><%= t '.title' %></h3>
		  </div>
		  
		  <div class="panel-body">
		  	<div class="form-inputs">
			    <div class="form-group">
			    	<div class="col-md-12">
		    			<%= f.input :description %>
		    		</div>
		  		</div>

		  		<div class="form-group">
			    	<div class="col-md-12">
		    			<%= f.input :date, as: :string, input_html: { data: {behaviour: "datepicker"}}, :format => :short   %><br>
		    		</div>
		  		</div>
	  		</div>

	  		<div class="form-actions">
	  			<%= link_to_remove_association t('links.remove_event'), f, class: "btn btn-danger" %>
				</div>

	  	</div> <!-- close panel body -->
		</div> <!-- panel primary -->
	</div>
</div> <!-- nested fields -->

<script type="text/javascript">
  $('[data-behaviour~=datepicker]').datepicker({
    "format": "dd-mm-yyyy",
    "weekStart": 1,
    "autoclose": true,
    language: "pt-BR"
  });
</script>