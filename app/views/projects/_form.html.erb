<%= simple_form_for @project do |f| %>
<div class="panel panel-primary">
	<div class="panel-heading">
		<h3 class="panel-title"><%= t '.project' %></h3>
	</div>
	<div class="panel-body">
		<%= f.error_notification %>
		<div class="form-inputs">

			<div class="form-group">
				<div class="col-md-12">
					<%= f.input :title %>
				</div>
			</div>

			<div class="form-group">
				<div class="col-md-12">
					<%= f.input :description, input_html: {rows: 5, placeholder: "Breve descrição da idéia, protótipo ou produto que pretende registrar, especificando o diferencial de inovação agregado ao produto e/ou serviço:"} %>
				</div>
			</div>

			<div class="form-group">
				<div class="col-md-12">
					<%= f.association :stage, as: :radio_buttons, collection: Stage.all, wrapper: :vertical_radio_and_checkboxes,
						label_method: :description, include_blank: false, :checked => [1] %>
				</div>
			</div>


			<div class="form-group">
				<div class="col-md-12">
					<%= f.input :visibility, collection: [[t('.public'),"public"],[t('.private'),"private"]], wrapper: :vertical_radio_and_checkboxes, as: :radio_buttons, :checked => ["public"]%>

				</div>
			</div>

			<div class="form-group">
				<div class="col-md-12">
					<%= f.input :url, as: :url%>

				</div>
			</div>

			<div class="form-group">
				<div class="col-md-12">
					<%= f.input :feedback, input_html: {rows: 5} %>

				</div>
			</div>
			 

		</div>
	</div>
</div>

<div class="col-md-12">
	<div class="page-header">
		<h1><%= t '.event' %></h1>
	</div>
	<blockquote>
		<p>Cadastre aqui, o(s) evento(s) que seu projeto participou</p>
	</blockquote>
	<div class="panel panel-primary">
		<div class="panel-body">
			<div id="events">
				<%= f.simple_fields_for :events do |event| %>
				<%= render "event_fields", :f => event %>
				<% end %>
				<div class="col-md-6">
					<%= link_to_add_association t(' '), f, :events, class: "btn btn-info btn-block glyphicon glyphicon-plus" %>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="form-actions">
	<div class="row">
		<div class="col-md-12">
			<br>
			<%= f.button :submit, class: "btn btn-primary" %>
			<%= link_to t('links.back'), projects_path, class: "btn btn-default" %>
		</div>
	</div>
</div>
<% end %>


