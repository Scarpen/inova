<%= simple_form_for(@project) do |f| %>
  <%= f.error_notification %>
  <div class="panel panel-primary">
	  <div class="panel-heading">
	    <h3 class="panel-title"><%= t '.project' %></h3>
	  </div>
	  <div class="panel-body">
		  <div class="form-inputs">
		    
		    <div class="form-group">
		    	<div class="col-md-12">
		    		<div class="col-md-12">
		    			<%= f.input :title %>
	    			</div>
	    		</div>
	  		</div>

	  		<div class="form-group">
		    	<div class="col-md-12">
		    		<div class="col-md-12">
		    			<%= f.input :description, input_html: {rows: 5, placeholder: "Breve descrição da idéia, protótipo ou produto que pretende registrar, especificando o diferencial de inovação agregado ao produto e/ou serviço:"} %>
	    			</div>
	    		</div>
	  		</div>
			</div>

	  </div>
  </div>

  <div class="row">
	  <div class="col-md-6">
			  <div class="panel panel-primary">
				  <div class="panel-heading">
				    <h3 class="panel-title"><%= t '.protection' %></h3>
				  </div>
				  <div class="panel-body">
			  		<div class="form-group">
				    	<div class="col-md-12">
				    		<div class="col-md-12">
				    			<%= f.association :protection, collection: Protection.all, label_method: :description, as: :radio_buttons, label: false, :checked => [1]  %>
			    			</div>
			    		</div>
			  		</div>
				  </div>
			  </div>  	
	 	</div>
	 	<div class="col-md-6">
	 		  <div class="panel panel-primary">
	 			  <div class="panel-heading">
	 			    <h3 class="panel-title"><%= t '.stage' %></h3>
	 			  </div>
	 			  <div class="panel-body">
	 		  		<div class="form-group">
	 			    	<div class="col-md-12">
	 			    		<div class="col-md-12">
	 			    			<%= f.association :stage, collection: Stage.all, label_method: :description, as: :radio_buttons, label: false, include_blank: false, :checked => [1]  %>
	 		    			</div>
	 		    		</div>
	 		  		</div>
	 			  </div>
	 		  </div>
	 	</div>

	 	<div class="page-header">
	 		<h1><%= t '.event' %></h1>
 		</div>
	  <div id="events">
	    <%= f.simple_fields_for :events do |event| %>
	      <%= render "event_fields", :f => event %>
	    <% end %>
	  </div>
  </div>

	  <div class="form-actions">
	  	<div class="row">
	  		<div class="col-md-12">
		  		<br><%= link_to_add_association t('links.add_event'), f, :events, class: "btn btn-info" %>
		    	<%= f.button :submit, class: "btn btn-primary" %>
		    	<%= link_to t('links.back'), projects_path, class: "btn btn-default" %>
	    	</div>
	    </div>
  </div>
<% end %>


