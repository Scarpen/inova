<div class="page-header">
  <h1>Listar securities</h1>
</div>

<div class="panel panel-default">
 <div class="panel-heading">
    <h3 class="panel-title">securities</h3>
  </div>
  <div class="panel-body">
    <table class="table table-hover" width="100%">
      <thead>
        <tr>
                      <th>type_of_security</th>
                    <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <%= content_tag_for(:tr, @securities) do |security| %>

                      <td><%= security.type_of_security %></td>
          
          <td>
            <%= link_to 'Detalhes', security %>
          </td>
          <td>
            <%= link_to 'Editar', edit_security_path(security) %>
          </td>
          <td>
            <%= link_to 'Deletar', security, method: :delete, data: { confirm: 'Tem certeza?'} %>
          </td>

          
        
        <% end %>
        
      </tbody>
    </table>
  </div>
</div>
<br>

<div class="form-actions">
  <%= link_to 'Incluir Security', new_security_path, class: 'btn btn-primary' %>
</div>

