<%= simple_form_for(@project_form) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :project_title %>
    <%= f.input :project_concept %>
    <%= f.input :current_stage %>
    <%= f.input :author %>
    <%= f.input :employee %>
    <%= f.input :leader %>
    <%= f.input :event %>
    <%= f.input :event_name %>
    <%= f.input :event_date %>
    <%= f.input :security_type %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
