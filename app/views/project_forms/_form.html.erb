<%= simple_form_for(@project_form) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">

<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Project Informations</h3>
  </div>
  <div class="panel-body">
    <div class="form-inputs">
      <div class="form-group">
        <div class="col-md-12">
          <div class="col-md-8">
            <%= f.input :project_title, autofocus: false %>
          </div>
          <div class="col-md-4">
            <%= f.input :project_concept %>
          </div>
        </div>
      </div>


      <div class="form-group">
        <div class="col-md-12">
          <div class="col-md-3">
            <%= f.input :current_stage %>
          </div>
          <div class="col-md-3">
            <%= f.input :author %>
          </div>
          <div class="col-md-3">
            <%= f.input :employee %>
          </div>
          <div class="col-md-3">
            <%= f.input :leader %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-12">
          <div class="col-md-2">
            <%= f.input :event %>
          </div>
          <div class="col-md-2">
            <%= f.input :event_name %>
          </div>
          <div class="col-md-2">
            <%= f.input :event_date, :as => :string, :input_html => { data: {behaviour: "datepicker"}} %>
          </div>
          <div class="col-md-2">
            <%= f.input :security_type %>
          </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

 <script type="text/javascript">
  $('[data-behaviour~=datepicker]').datepicker({
    "format": "yyyy-mm-dd",
    "weekStart": 1,
    "autoclose": true
  });
</script>

