<div class="page-header">
  <h1>Listar events</h1>
</div>

<div class="panel panel-default">
 <div class="panel-heading">
    <h3 class="panel-title">events</h3>
  </div>
  <div class="panel-body">
    <table class="table table-hover" width="100%">
      <thead>
        <tr>
                      <th>name</th>
                      <th>date</th>
                    <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <%= content_tag_for(:tr, @events) do |event| %>

                      <td><%= event.name %></td>
                      <td><%= event.date %></td>
          
          <td>
            <%= link_to 'Detalhes', event %>
          </td>
          <td>
            <%= link_to 'Editar', edit_event_path(event) %>
          </td>
          <td>
            <%= link_to 'Deletar', event, method: :delete, data: { confirm: 'Tem certeza?'} %>
          </td>

          
        
        <% end %>
        
      </tbody>
    </table>
  </div>
</div>
<br>

<div class="form-actions">
  <%= link_to 'Incluir Event', new_event_path, class: 'btn btn-primary' %>
</div>

