<!-- Modal Login -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Login</h4>
      </div>
      <%= simple_form_for(:user, :url => session_path(:user)) do |f| %>
      <div class="modal-body">
        <div class="form-inputs">
          <%= f.input :email, :required => false, :autofocus => true %>
          <%= f.input :password, :required => false %>
        </div>
        <%= f.button :submit, t("links.sign_in"), class: "btn btn-lg btn-primary col-xs-12 col-md-12" %>

        <div class="modal-footer">
          </br>
          <p style="text-align: center">Ou conecte-se usando as redes sociais</p>
          <p><%= link_to " Sign in with Twitter", user_omniauth_authorize_path(:twitter), class: " btn btn-lg btn-info  col-xs-12 col-md-12 fa fa-twitter", id: "btn-twitter"  %></p>
          <p><%= link_to " Sign in with Facebook", user_omniauth_authorize_path(:facebook), class: "btn btn-lg btn-primary  col-xs-12 col-md-12 fa fa-facebook", id: "btn-facebook" %></p>
        </div>

      </div>


      
      <% end %>

    </div>
  </div>
</div>