<div class="page-header">
  <h1>Sign Up</h1>
</div>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
<%= f.error_notification %>

<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Personal Information</h3>
  </div>
  <div class="panel-body">
    <div class="form-inputs">
      <div class="form-group">
        <div class="col-md-12">
          <div class="col-md-8">
            <%= f.input :full_name, autofocus: false %>
          </div>
          <div class="col-md-4">
            <%= f.input :email %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-12">
          <div class="col-md-3">
            <%= f.input :username %>
          </div>
          <div class="col-md-3">
            <%= f.input :password, autocomplete: "off" %>
          </div>
          <div class="col-md-3">
            <%= f.input :password_confirmation, autocomplete: "off" %>
          </div>
          <div class="col-md-3">
            <%= f.input :naturality %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-12">
          <div class="col-md-2">
            <%= f.input :phone, autofocus: false, input_html: { id: "phone" } %>
          </div>
          <div class="col-md-2">
            <%= f.input :rg %>
          </div>
          <div class="col-md-2">
            <%= f.input :cpf, input_html: { id: "cpf" } %>
          </div>
          <div class="col-md-2">
            <%= f.input :issuing_agency %>
          </div>
          <div class="col-md-2">
            <%= f.input :birth_date, :as => :string, :input_html => { data: {behaviour: "datepicker"}} %>
          </div>
          <div class="col-md-2">
            <%= f.input :nationality %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-12">
          <div class="col-md-8">
            <%= f.input :residential_address %>
          </div>
          <div class="col-md-2">
            <%= f.input :cep %>
          </div>
          <div class="col-md-2">
            <%= f.input :city %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">Comercial Information</h3>
  </div>
  <div class="panel-body">
    <div class="form-inputs">
      <div class="form-group">
        <div class="col-md-12">
          <div class="col-md-3">
            <%= f.input :formation %>
          </div>
          <div class="col-md-3">
            <%= f.input :course %>
          </div>
          <div class="col-md-3">
            <%= f.input :institution %>
          </div>
          <div class="col-md-3">
            <%= f.input :job %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="btnsignup">
<%= f.submit "Sign up", class: "btn btn-primary", style: "margin: 15px;" %>
<%= render "devise/shared/links" %>
</div>
<% end %>

<script type="text/javascript">
  $('[data-behaviour~=datepicker]').datepicker({
    "format": "yyyy-mm-dd",
    "weekStart": 1,
    "autoclose": true
  });
</script>

<script type="text/javascript">
  jQuery(function($){
    $("#phone").mask("(99) 9999-9999");
    $("#cpf").mask("999.999.999-99");
  });
</script>


