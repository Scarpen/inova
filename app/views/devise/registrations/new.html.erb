<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">

    <div class="form-group">
      <div class="col-xs-4">
        <%= f.input :full_name, autofocus: false %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-xs-4">
        <%= f.input :email %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-xs-4">
        <%= f.input :username %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-xs-4">
        <%= f.input :password, autocomplete: "off" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-xs-4">
        <%= f.input :password_confirmation, autocomplete: "off" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-xs-4">
        <%= f.input :phone, autofocus: false, input_html: { id: "phone" } %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-xs-4">
        <%= f.input :rg %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-xs-4">
        <%= f.input :cpf, input_html: { id: "cpf" } %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-xs-4">
        <%= f.input :issuing_agency %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-xs-4">
        <%= f.input :birth_date, :as => :string, :input_html => { data: {behaviour: "datepicker"}} %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-xs-4">
        <%= f.input :nationality %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-xs-4">
        <%= f.input :naturality %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-xs-4">
        <%= f.input :residential_address %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-xs-4">
        <%= f.input :cep %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-xs-4">
        <%= f.input :city %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-xs-4">
        <%= f.input :formation %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-xs-4">
        <%= f.input :course %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-xs-4">
        <%= f.input :institution %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-xs-4">
        <%= f.input :job %>
      </div>
    </div>
    <div><%= f.submit "Sign up", class: "btn btn-success", style: "margin: 15px;" %></div><br>
    <%= render "devise/shared/links" %>
  </div><br>

  
<% end %>




<script type="text/javascript">
  $('[data-behaviour~=datepicker]').datepicker({
    "format": "yyyy-mm-dd",
    "weekStart": 1,
    "autoclose": true
  });
</script>

<script type="text/javascript">
  jQuery(function($){
    $("#phone").mask("(99) 9999-9999");
    $("#cpf").mask("999.999.999-99");
  });
</script>


