<div class="page-header">
  <h1><%= t(".title") %></h1>
</div>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-vertical", method: :put}) do |f| %>
<%= f.error_notification %>

<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title"><%= t '.personal' %></h3>
  </div>
  <div class="panel-body">
    <div class="form-inputs">
      <div class="form-group">
        <div class="col-md-12">
          <div class="col-md-8">
            <%= f.input :full_name, autofocus: true, :input_html => {'data-content'=> "Popover content", :class => "popover-dismiss", "data-toggle" => "popover", "data-placement" => "top" } %>
          </div>
          <div class="col-md-4">
            <%= f.input :email, :input_html => {'data-content'=> "Popover content", :class => "popover-dismiss", "data-toggle" => "popover", "data-placement" => "top" } %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-12">
          <%unless f.object.uid.present? %>
          <div class="col-md-3">
            <%= f.input :password, autocomplete: "off", :input_html => {'data-content'=> "Popover content", :class => "popover-dismiss", "data-toggle" => "popover", "data-placement" => "top" } %>
          </div>
          <div class="col-md-3">
            <%= f.input :password_confirmation, autocomplete: "off", :input_html => {'data-content'=> "Popover content", :class => "popover-dismiss", "data-toggle" => "popover", "data-placement" => "top" } %>
          </div>
          <% end %>
          <div class="col-md-3">
            <%= f.input :naturality, :input_html => {'data-content'=> "Popover content", :class => "popover-dismiss", "data-toggle" => "popover", "data-placement" => "top" } %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-12">
          <div class="col-md-2">
            <%= f.input :phone, input_html: { id: "phone", 'data-content'=> "Popover content", :class => "popover-dismiss", "data-toggle" => "popover", "data-placement" => "top"  } %>
          </div>
          <div class="col-md-2">
            <%= f.input :rg, :input_html => {'data-content'=> "Popover content", :class => "popover-dismiss", "data-toggle" => "popover", "data-placement" => "top" } %>
          </div>
          <div class="col-md-2">
            <%= f.input :cpf, input_html: { id: "cpf", 'data-content'=> "Popover content", :class => "popover-dismiss", "data-toggle" => "popover", "data-placement" => "top"  } %>
          </div>
          <div class="col-md-2">
            <%= f.input :issuing_agency, :input_html => {'data-content'=> "Popover content", :class => "popover-dismiss", "data-toggle" => "popover", "data-placement" => "top" }  %>
          </div>
          <div class="col-md-2">
            <%= f.input :birth_date, :as => :string, :input_html => { data: {behaviour: "datepicker"}, 'data-content'=> "Popover content", :class => "popover-dismiss", "data-toggle" => "popover", "data-placement" => "top" } %>
          </div>
          <div class="col-md-2">
            <%= f.input :nationality, :input_html => {'data-content'=> "Popover content", :class => "popover-dismiss", "data-toggle" => "popover", "data-placement" => "top" }  %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-12">
          <div class="col-md-8">
            <%= f.input :residential_address, :input_html => {'data-content'=> "Popover content", :class => "popover-dismiss", "data-toggle" => "popover", "data-placement" => "top" }  %>
          </div>
          <div class="col-md-2">
            <%= f.input :cep, :input_html => {'data-content'=> "Popover content", :class => "popover-dismiss", "data-toggle" => "popover", "data-placement" => "top" }  %>
          </div>
          <div class="col-md-2">
            <%= f.input :city, :input_html => {'data-content'=> "Popover content", :class => "popover-dismiss", "data-toggle" => "popover", "data-placement" => "top" }  %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title"><%= t '.comercial' %></h3>
  </div>
  <div class="panel-body">
    <div class="form-inputs">
      <div class="form-group">
        <div class="col-md-12">
          <div class="col-md-3">
            <%= f.input :formation, :input_html => {'data-content'=> "Popover content", :class => "popover-dismiss", "data-toggle" => "popover", "data-placement" => "top" }  %>
          </div>
          <div class="col-md-3">
            <%= f.input :course, :input_html => {'data-content'=> "Popover content", :class => "popover-dismiss", "data-toggle" => "popover", "data-placement" => "top" }  %>
          </div>
          <div class="col-md-3">
            <%= f.input :institution, :input_html => {'data-content'=> "Popover content", :class => "popover-dismiss", "data-toggle" => "popover", "data-placement" => "top" }  %>
          </div>
          <div class="col-md-3">
            <%= f.input :job, :input_html => {'data-content'=> "Popover content", :class => "popover-dismiss", "data-toggle" => "popover", "data-placement" => "top" }  %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= f.input :newsletter , as: :radio_buttons, 
wrapper: :vertical_radio_and_checkboxes,
include_blank: false %>

<% if f.object.encrypted_password.present? %>
<%= f.input :current_password %>
<% end %>

<div class="btnsignup">
  <%= f.submit t("links.update"), class: "btn btn-primary", style: "margin: 15px;" %>
  <%= render "devise/shared/links" %>
</div>
<% end %>

<center>
  <p><%= button_to "Cancelar Minha Conta", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-lg btn-danger" %></p>
</center>
</br>
</br>
</br>
<script type="text/javascript">
  $('[data-behaviour~=datepicker]').datepicker({
    "format": "dd-mm-yyyy",
    "weekStart": 1,
    "autoclose": true,
    language: "pt-BR"
  });
</script>

<script type="text/javascript">
  jQuery(function($){
    $("#phone").mask("(99) 9999-9999");
    $("#cpf").mask("999.999.999-99");
  });
</script>

