<div class="page-header">
  <h1><%= t(".title") %></h1>
</div>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-vertical", method: :put}) do |f| %>
<%= f.error_notification %>

<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title"><%= t '.personal' %></h3>
  </div>
  <div class="panel-body">
    <div class="form-inputs">
      <div class="form-group">
        <div class="col-md-12">
          <div class="col-md-8">
            <%= f.input :full_name, autofocus: true %>
          </div>
          <div class="col-md-4">
            <%= f.input :email %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-12">
          <div class="col-md-3">
            <%= f.input :username %>
          </div>
          <div class="col-md-3">
            <%= f.input :password, autocomplete: "off" %>
          </div>
          <div class="col-md-3">
            <%= f.input :password_confirmation, autocomplete: "off" %>
          </div>
          <div class="col-md-3">
            <%= f.input :naturality %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-12">
          <div class="col-md-2">
            <%= f.input :phone, input_html: { id: "phone" } %>
          </div>
          <div class="col-md-2">
            <%= f.input :rg %>
          </div>
          <div class="col-md-2">
            <%= f.input :cpf, input_html: { id: "cpf" } %>
          </div>
          <div class="col-md-2">
            <%= f.input :issuing_agency %>
          </div>
          <div class="col-md-2">
            <%= f.input :birth_date, :as => :string, :input_html => { data: {behaviour: "datepicker"}} %>
          </div>
          <div class="col-md-2">
            <%= f.input :nationality %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <div class="col-md-12">
          <div class="col-md-8">
            <%= f.input :residential_address %>
          </div>
          <div class="col-md-2">
            <%= f.input :cep %>
          </div>
          <div class="col-md-2">
            <%= f.input :city %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title"><%= t '.comercial' %></h3>
  </div>
  <div class="panel-body">
    <div class="form-inputs">
      <div class="form-group">
        <div class="col-md-12">
          <div class="col-md-3">
            <%= f.input :formation %>
          </div>
          <div class="col-md-3">
            <%= f.input :course %>
          </div>
          <div class="col-md-3">
            <%= f.input :institution %>
          </div>
          <div class="col-md-3">
            <%= f.input :job %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= f.input :newsletter , as: :radio_buttons, 
  wrapper: :vertical_radio_and_checkboxes,
  include_blank: false %>

<%= f.input :current_password %>

<div class="btnsignup">
<%= f.submit t("links.update"), class: "btn btn-primary", style: "margin: 15px;" %>
<%= render "devise/shared/links" %>
</div>
<% end %>

<center>
<p><%= button_to "Cancelar Minha Conta", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-lg btn-danger" %></p>
</center>

<script type="text/javascript">
  $('[data-behaviour~=datepicker]').datepicker({
    "format": "dd-mm-yyyy",
    "weekStart": 1,
    "autoclose": true,
    language: "pt-BR"
  });
</script>

<script type="text/javascript">
  jQuery(function($){
    $("#phone").mask("(99) 9999-9999");
    $("#cpf").mask("999.999.999-99");
  });
</script>


