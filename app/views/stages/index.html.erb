<div class="page-header">
  <h1>Listar stages</h1>
</div>

<div class="panel panel-default">
 <div class="panel-heading">
    <h3 class="panel-title">stages</h3>
  </div>
  <div class="panel-body">
    <table class="table table-hover" width="100%">
      <thead>
        <tr>
                      <th>current_project_stage</th>
                    <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <%= content_tag_for(:tr, @stages) do |stage| %>

                      <td><%= stage.current_project_stage %></td>
          
          <td>
            <%= link_to 'Detalhes', stage %>
          </td>
          <td>
            <%= link_to 'Editar', edit_stage_path(stage) %>
          </td>
          <td>
            <%= link_to 'Deletar', stage, method: :delete, data: { confirm: 'Tem certeza?'} %>
          </td>

          
        
        <% end %>
        
      </tbody>
    </table>
  </div>
</div>
<br>

<div class="form-actions">
  <%= link_to 'Incluir Stage', new_stage_path, class: 'btn btn-primary' %>
</div>

